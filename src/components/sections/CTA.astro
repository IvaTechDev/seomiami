---
/**
 * Final Call-to-Action Section Component
 * Prominent conversion-focused section
 */

import Section from '../ui/Section.astro';
import Container from '../ui/Container.astro';
import Heading from '../ui/Heading.astro';
import Button from '../ui/Button.astro';
import { Rocket, ArrowRight, CheckCircle, Clock, Users, Star, TrendingUp, Zap, Calculator } from 'lucide-react';
import Card from '../ui/Card.astro';
---

<Section 
  id="final-cta" 
  className="relative overflow-hidden"
>
  {/* Animated Background Gradient */}
  <div class="absolute z0 inset-0 bg-gradient-to-br from-miami-cyan/20 via-miami-purple/20 to-miami-pink/20 animate-gradient"></div>
  <div class="absolute z0 inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(0,217,255,0.1),transparent_50%)]"></div>
  
  <Container className="relative z-10">
    <Card variant="glass" className="text-center max-w-4xl mx-auto border-2 border-miami-cyan/30">
      {/* Main CTA Content */}
      <div class="mb-8 text-center">
        <Heading level="h2" as="h2" className="mb-6">
          Ready to Dominate{' '}
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-miami-cyan via-miami-purple to-miami-pink">
            Miami's Search Results?
          </span>
        </Heading>
        <p class="text-2xl text-slate-300 mb-8 max-w-2xl mx-auto">
          Get your free SEO audit and custom strategy today
        </p>

        {/* Primary CTA Button */}
        <Button 
          href="#contact" 
          variant="primary"
          size="lg"
          className="group mx-auto mb-16 shadow-2xl shadow-miami-cyan/30 hover:shadow-miami-cyan/50"
        >
          <Rocket className="group-hover:scale-110 transition-transform" />
          &nbsp;Get My Free Audit
          <ArrowRight className="group-hover:translate-x-1 transition-transform" />
        </Button>

        {/* Trust Signals */}
        <p class="text-sm text-slate-400 mb-2">
          <CheckCircle className="inline text-green-500" />
          No credit card required
          <span class="mx-2">â€¢</span>
          <Clock className="inline text-green-500" />
          Results in 48 hours
        </p>
      </div>

      {/* Value Props */}
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 pt-8 border-t border-slate-700/50">
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 rounded-full bg-miami-cyan/20 flex items-center justify-center mb-3">
            <Users className="text-miami-cyan" />
          </div>
          <p class="text-lg font-bold text-white mb-1">500+</p>
          <p class="text-sm text-slate-400">Businesses Trust Us</p>
        </div>

        <div class="flex flex-col items-center">
          <div class="w-12 h-12 rounded-full bg-miami-purple/20 flex items-center justify-center mb-3">
            <Star className="text-miami-purple fill-current" />
          </div>
          <p class="text-lg font-bold text-white mb-1">5-Star</p>
          <p class="text-sm text-slate-400">Average Rating</p>
        </div>

        <div class="flex flex-col items-center">
          <div class="w-12 h-12 rounded-full bg-miami-pink/20 flex items-center justify-center mb-3">
            <TrendingUp className="text-miami-pink" />
          </div>
          <p class="text-lg font-bold text-white mb-1">275%</p>
          <p class="text-sm text-slate-400">Average Growth</p>
        </div>
      </div>

      {/* Urgency Element */}
      <div class="mt-8 p-4 rounded-lg bg-gradient-to-r from-miami-cyan/10 to-miami-purple/10 border border-miami-cyan/20">
        <p class="text-sm text-slate-300">
          <Zap className="inline text-yellow-400" />
          <strong class="text-white">Limited Availability:</strong> We only take on 3 new clients per month to ensure quality service
        </p>
      </div>
    </Card>

    {/* Alternative Mini ROI Calculator Teaser */}
    <div class="mt-12 text-center">
      <p class="text-slate-400 mb-4">
        Want to see your potential ROI first?
      </p>
      <a 
        href="#roi-calculator"
        class="inline-flex items-center gap-2 text-miami-cyan hover:text-miami-purple transition-colors font-semibold"
      >
        <Calculator size="36" />
        Try Our ROI Calculator
        <ArrowRight size="36" />
      </a>
    </div>
  </Container>
</Section>

<style>
  @keyframes gradient {
    0%, 100% {
      opacity: 0.5;
    }
    50% {
      opacity: 0.8;
    }
  }

  .animate-gradient {
    animation: gradient 8s ease-in-out infinite;
  }
</style>
