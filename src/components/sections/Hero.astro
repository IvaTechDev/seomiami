---
import Heading from '../ui/Heading.astro';
import Button from '../ui/Button.astro';
import Container from '../ui/Container.astro';
import { Users, Star, TrendingUp, ArrowRight, BarChart, ChevronDown } from 'lucide-react';
---

<section
  id="hero"
  class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-miami-navy via-miami-charcoal to-miami-navy"
>
  <!-- Animated Gradient Orbs Background -->
  <div class="absolute inset-0 overflow-hidden">
    <div
      class="absolute top-1/4 left-1/4 w-96 h-96 bg-miami-cyan/20 rounded-full blur-3xl animate-pulse"
      style="animation-duration: 4s;"
    >
    </div>
    <div
      class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-miami-purple/20 rounded-full blur-3xl animate-pulse"
      style="animation-duration: 6s; animation-delay: 1s;"
    >
    </div>
    <div
      class="absolute top-1/2 right-1/3 w-64 h-64 bg-miami-pink/10 rounded-full blur-3xl animate-pulse"
      style="animation-duration: 5s; animation-delay: 2s;"
    >
    </div>
  </div>

  <!-- Floating Particles -->
  <div class="absolute inset-0 opacity-30">
    {
      Array.from({ length: 20 }).map((_, i) => (
        <div
          class="absolute w-1 h-1 bg-white rounded-full animate-pulse"
          style={{
            left: `${Math.random() * 100}%`,
            top: `${Math.random() * 100}%`,
            animationDelay: `${Math.random() * 3}s`,
            animationDuration: `${2 + Math.random() * 2}s`,
          }}
        />
      ))
    }
  </div>

  <Container className="relative z-10">
    <div class="max-w-5xl mx-auto text-center">
      <!-- Main Headline -->
      <div class="mb-6 py-16 animate-fade-in">
        <Heading level="h1" className="mb-0">
          Dominate Miami's Search Results with
          <span class="block mt-2 bg-gradient-to-r from-miami-cyan via-miami-purple to-miami-pink bg-clip-text text-transparent">
            Data-Driven SEO
          </span>
        </Heading>
      </div>

      <!-- Subheadline -->
      <p
        class="text-xl md:text-2xl text-gray-300 mb-12 max-w-3xl mx-auto animate-fade-in leading-relaxed"
        style="animation-delay: 0.2s;"
      >
        Miami businesses trust us to deliver measurable ROI through custom SEO
        strategies built for the Magic City's competitive digital landscape.
      </p>

      <!-- Trust Signals -->
      <div
        class="flex flex-wrap justify-center gap-6 mb-12 text-sm md:text-base animate-fade-in"
        style="animation-delay: 0.4s;"
      >
        <div class="flex items-center gap-2 text-gray-400">
          <Users className="w-5 h-5 text-miami-cyan" />
          <span>500+ Miami Businesses</span>
        </div>
        <div class="flex items-center gap-2 text-gray-400">
          <Star className="w-5 h-5 text-yellow-400 fill-yellow-400" />
          <span>5-Star Reviews</span>
        </div>
        <div class="flex items-center gap-2 text-gray-400">
          <TrendingUp className="w-5 h-5 text-miami-purple" />
          <span>Average 220% ROI</span>
        </div>
      </div>

      <!-- CTAs -->
      <div
        class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-slide-up"
        style="animation-delay: 0.6s;"
      >
        <Button
          variant="primary"
          size="lg"
          href="#contact"
          className="group min-w-[250px]"
        >
          Get My Free SEO Audit
          <ArrowRight className="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" />
        </Button>
        <Button
          variant="outline"
          size="lg"
          href="#case-studies"
          className="min-w-[250px]"
        >
          <BarChart className="w-5 h-5 mr-2" />
          View Miami Case Studies
        </Button>
      </div>

      <!-- Glassmorphic Stats Card -->
      <div
        class="mt-16 p-8 rounded-2xl bg-white/5 backdrop-blur-lg border border-white/10 animate-fade-in"
        style="animation-delay: 0.8s;"
      >
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold text-white mb-2">
              500+
            </div>
            <div class="text-sm text-gray-400 uppercase tracking-wide">
              Miami Clients
            </div>
          </div>
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold text-white mb-2">
              15+
            </div>
            <div class="text-sm text-gray-400 uppercase tracking-wide">
              Years Experience
            </div>
          </div>
          <div class="text-3xl md:text-4xl font-bold text-white mb-2 text-center">
            220%
            <div class="text-sm text-gray-400 uppercase tracking-wide mt-2">
              Average ROI
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>

  <!-- Scroll Indicator -->
  <div
    class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce"
  >
    <a
      href="#services"
      class="flex flex-col items-center text-gray-400 hover:text-miami-cyan transition-colors"
      aria-label="Scroll to services section"
    >
      <span class="text-xs uppercase tracking-wider mb-2">Scroll</span>
      <ChevronDown className="w-6 h-6" />
    </a>
  </div>

  <!-- Decorative Corner Accents -->
  <div class="absolute top-0 left-0 w-32 h-32 border-t-2 border-l-2 border-miami-cyan/30 rounded-tl-3xl"></div>
  <div class="absolute bottom-0 right-0 w-32 h-32 border-b-2 border-r-2 border-miami-purple/30 rounded-br-3xl"></div>
</section>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }

  .animate-slide-up {
    animation: slideUp 0.8s ease-out forwards;
    opacity: 0;
  }
</style>
