---
/**
 * Heading Component
 * 
 * Typography component for semantic headings with optional gradient effect.
 * Uses Syne font family from the theme.
 * 
 * @param {string} level - Heading level: 'h1', 'h2', 'h3', 'h4', 'h5', 'h6'
 * @param {boolean} gradient - Apply gradient text effect
 * @param {string} class - Additional CSS classes
 */

interface Props {
  level?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
  gradient?: boolean;
  class?: string;
}

const { 
  level = 'h2',
  gradient = false,
  class: className = ''
} = Astro.props;

// Base styles for all headings
const baseStyles = 'font-display font-bold';

// Level-specific styles
const levelStyles = {
  h1: 'text-4xl md:text-5xl lg:text-6xl mb-6',
  h2: 'text-3xl md:text-4xl lg:text-5xl mb-5',
  h3: 'text-2xl md:text-3xl lg:text-4xl mb-4',
  h4: 'text-xl md:text-2xl mb-3',
  h5: 'text-lg md:text-xl mb-2',
  h6: 'text-base md:text-lg mb-2'
};

// Gradient style
const gradientStyle = gradient ? 'bg-clip-text text-transparent bg-gradient-to-r from-miami-cyan via-miami-purple to-miami-pink' : '';

// Combine classes
const headingClasses = `${baseStyles} ${levelStyles[level]} ${gradientStyle} ${className}`;

// Dynamically render the correct heading tag
const Tag = level;
---

<Tag class={headingClasses}>
  <slot />
</Tag>

<style>
  /* Ensure gradient text renders properly */
  [class*="bg-clip-text"] {
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  /* Smooth gradient animation on hover */
  [class*="bg-gradient-to-r"]:hover {
    animation: gradientShift 3s ease infinite;
    background-size: 200% auto;
  }
  
  @keyframes gradientShift {
    0%, 100% {
      background-position: 0% center;
    }
    50% {
      background-position: 100% center;
    }
  }
</style>
