---
/**
 * Component Test Page
 * 
 * Showcases all UI components from Phase 2.
 * Used for testing and documentation purposes.
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import Badge from '../components/ui/Badge.astro';
import Section from '../components/ui/Section.astro';
import Container from '../components/ui/Container.astro';
import Heading from '../components/ui/Heading.astro';
import GradientText from '../components/ui/GradientText.astro';
import { Input } from '../components/ui/Input';
import { TextArea } from '../components/ui/TextArea';
---

<BaseLayout
  title="UI Components Test | SEOSERVICESMIAMI.COM"
  description="Test page showcasing all Phase 2 core UI components"
>
  <!-- Hero Section with Test Title -->
  <Section background="gradient" class="min-h-[40vh] flex items-center justify-center">
    <Container size="lg">
      <div class="text-center">
        <Heading level="h1" gradient>
          UI Components Test
        </Heading>
        <p class="text-xl text-white/80 max-w-2xl mx-auto">
          Showcasing all Phase 2 core UI components for the <GradientText>Miami Nights</GradientText> theme.
        </p>
      </div>
    </Container>
  </Section>

  <!-- Button Component Tests -->
  <Section background="charcoal" id="buttons">
    <Container>
      <Heading level="h2" class="mb-8">Button Component</Heading>
      
      <div class="space-y-6">
        <!-- Button Variants -->
        <div>
          <h3 class="text-lg font-semibold mb-4 text-white/90">Variants</h3>
          <div class="flex flex-wrap gap-4">
            <Button variant="primary">Primary Button</Button>
            <Button variant="secondary">Secondary Button</Button>
            <Button variant="ghost">Ghost Button</Button>
          </div>
        </div>

        <!-- Button Sizes -->
        <div>
          <h3 class="text-lg font-semibold mb-4 text-white/90">Sizes</h3>
          <div class="flex flex-wrap items-center gap-4">
            <Button variant="primary" size="sm">Small Button</Button>
            <Button variant="primary" size="md">Medium Button</Button>
            <Button variant="primary" size="lg">Large Button</Button>
          </div>
        </div>

        <!-- Button as Link -->
        <div>
          <h3 class="text-lg font-semibold mb-4 text-white/90">As Link</h3>
          <Button variant="primary" href="#buttons">Button Link</Button>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Card Component Tests -->
  <Section background="navy" id="cards">
    <Container>
      <Heading level="h2" class="mb-8">Card Component</Heading>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <Card variant="glass" padding="md">
          <h3 class="text-xl font-bold mb-2">Glass Card</h3>
          <p class="text-white/70">Basic glassmorphism effect with backdrop blur.</p>
        </Card>

        <Card variant="glass-hover" padding="md">
          <h3 class="text-xl font-bold mb-2">Glass Hover Card</h3>
          <p class="text-white/70">Hover for lift effect and enhanced glow.</p>
        </Card>

        <Card variant="solid" padding="md">
          <h3 class="text-xl font-bold mb-2">Solid Card</h3>
          <p class="text-white/70">Solid background variant for contrast.</p>
        </Card>
      </div>

      <!-- Card with different padding -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6">
        <Card variant="glass-hover" padding="sm">
          <p class="text-sm text-white/70">Small padding</p>
        </Card>

        <Card variant="glass-hover" padding="md">
          <p class="text-sm text-white/70">Medium padding (default)</p>
        </Card>

        <Card variant="glass-hover" padding="lg">
          <p class="text-sm text-white/70">Large padding</p>
        </Card>
      </div>
    </Container>
  </Section>

  <!-- Badge Component Tests -->
  <Section background="charcoal" id="badges">
    <Container>
      <Heading level="h2" class="mb-8">Badge Component</Heading>
      
      <div class="space-y-6">
        <!-- Badge Variants -->
        <div>
          <h3 class="text-lg font-semibold mb-4 text-white/90">Variants</h3>
          <div class="flex flex-wrap gap-3">
            <Badge variant="primary">Primary</Badge>
            <Badge variant="secondary">Secondary</Badge>
            <Badge variant="success">Success</Badge>
            <Badge variant="warning">Warning</Badge>
          </div>
        </div>

        <!-- Badge Sizes -->
        <div>
          <h3 class="text-lg font-semibold mb-4 text-white/90">Sizes</h3>
          <div class="flex flex-wrap items-center gap-3">
            <Badge variant="primary" size="sm">Small</Badge>
            <Badge variant="primary" size="md">Medium</Badge>
            <Badge variant="primary" size="lg">Large</Badge>
          </div>
        </div>

        <!-- Real-world examples -->
        <div>
          <h3 class="text-lg font-semibold mb-4 text-white/90">Examples</h3>
          <div class="flex flex-wrap gap-3">
            <Badge variant="primary">Best Value</Badge>
            <Badge variant="secondary">Popular</Badge>
            <Badge variant="success">New</Badge>
            <Badge variant="warning">Limited Time</Badge>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Heading & Typography Tests -->
  <Section background="navy" id="typography">
    <Container>
      <Heading level="h2" class="mb-8">Heading & Typography</Heading>
      
      <div class="space-y-6">
        <div>
          <Heading level="h1">Heading Level 1</Heading>
          <Heading level="h2">Heading Level 2</Heading>
          <Heading level="h3">Heading Level 3</Heading>
          <Heading level="h4">Heading Level 4</Heading>
        </div>

        <div>
          <h3 class="text-lg font-semibold mb-4 text-white/90">Gradient Headings</h3>
          <Heading level="h1" gradient>Gradient Heading 1</Heading>
          <Heading level="h2" gradient>Gradient Heading 2</Heading>
          <Heading level="h3" gradient>Gradient Heading 3</Heading>
        </div>

        <div>
          <h3 class="text-lg font-semibold mb-4 text-white/90">Gradient Text Component</h3>
          <p class="text-2xl">
            This is <GradientText>gradient text</GradientText> inline with regular text.
          </p>
          <p class="text-2xl mt-4">
            <GradientText animate>Animated gradient text</GradientText> with motion effect.
          </p>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Form Components Tests (React) -->
  <Section background="charcoal" id="forms">
    <Container>
      <Heading level="h2" class="mb-8">Form Components</Heading>
      
      <div class="max-w-2xl">
        <Card variant="glass-hover" padding="lg">
          <form class="space-y-6">
            <Input 
              client:load
              name="name"
              label="Full Name"
              placeholder="John Doe"
              required={true}
            />

            <Input 
              client:load
              type="email"
              name="email"
              label="Email Address"
              placeholder="john@example.com"
              required={true}
            />

            <Input 
              client:load
              type="tel"
              name="phone"
              label="Phone Number"
              placeholder="(305) 555-0123"
            />

            <Input 
              client:load
              name="website"
              label="Website URL"
              placeholder="https://example.com"
              error="Please enter a valid URL"
            />

            <TextArea 
              client:load
              name="message"
              label="Message"
              placeholder="Tell us about your SEO needs..."
              rows={6}
              required={true}
              maxLength={500}
              showCount={true}
            />

            <div class="flex gap-4">
              <Button variant="primary" type="submit">Submit Form</Button>
              <Button variant="secondary" type="button">Cancel</Button>
            </div>
          </form>
        </Card>
      </div>
    </Container>
  </Section>

  <!-- Container & Layout Tests -->
  <Section background="navy" id="layout">
    <Container>
      <Heading level="h2" class="mb-8">Container Sizes</Heading>
      
      <div class="space-y-8">
        <div>
          <h3 class="text-lg font-semibold mb-4 text-white/90">Small Container</h3>
          <div class="bg-miami-cyan/10 border border-miami-cyan/30 rounded-lg">
            <Container size="sm" class="!py-4">
              <p class="text-center text-white/70">max-w-2xl (672px)</p>
            </Container>
          </div>
        </div>

        <div>
          <h3 class="text-lg font-semibold mb-4 text-white/90">Medium Container</h3>
          <div class="bg-miami-purple/10 border border-miami-purple/30 rounded-lg">
            <Container size="md" class="!py-4">
              <p class="text-center text-white/70">max-w-4xl (896px)</p>
            </Container>
          </div>
        </div>

        <div>
          <h3 class="text-lg font-semibold mb-4 text-white/90">Large Container (Default)</h3>
          <div class="bg-miami-pink/10 border border-miami-pink/30 rounded-lg">
            <Container size="lg" class="!py-4">
              <p class="text-center text-white/70">max-w-7xl (1280px)</p>
            </Container>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Combined Example -->
  <Section background="gradient" id="combined">
    <Container>
      <div class="text-center mb-12">
        <Badge variant="primary" size="lg">Featured Example</Badge>
        <Heading level="h2" gradient class="mt-4">
          Components in Action
        </Heading>
        <p class="text-xl text-white/80 mt-4 max-w-2xl mx-auto">
          All components working together in a real-world scenario.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <Card variant="glass-hover" padding="lg">
          <Badge variant="primary" class="mb-4">Service 1</Badge>
          <Heading level="h3" class="mb-4">Local SEO</Heading>
          <p class="text-white/70 mb-6">
            Dominate local search results with our <GradientText>Miami-focused</GradientText> SEO strategies.
          </p>
          <Button variant="primary" size="sm" href="#" class="w-full">Learn More</Button>
        </Card>

        <Card variant="glass-hover" padding="lg">
          <Badge variant="secondary" class="mb-4">Service 2</Badge>
          <Heading level="h3" class="mb-4">Technical SEO</Heading>
          <p class="text-white/70 mb-6">
            Optimize your site's <GradientText>performance</GradientText> and crawlability.
          </p>
          <Button variant="primary" size="sm" href="#" class="w-full">Learn More</Button>
        </Card>

        <Card variant="glass-hover" padding="lg">
          <Badge variant="success" class="mb-4">Service 3</Badge>
          <Heading level="h3" class="mb-4">Content Strategy</Heading>
          <p class="text-white/70 mb-6">
            Create <GradientText>compelling content</GradientText> that ranks and converts.
          </p>
          <Button variant="primary" size="sm" href="#" class="w-full">Learn More</Button>
        </Card>
      </div>
    </Container>
  </Section>

  <!-- Navigation Helper -->
  <Section background="charcoal">
    <Container>
      <div class="text-center">
        <Heading level="h3" class="mb-6">Quick Navigation</Heading>
        <div class="flex flex-wrap justify-center gap-3">
          <Button variant="ghost" href="#buttons">Buttons</Button>
          <Button variant="ghost" href="#cards">Cards</Button>
          <Button variant="ghost" href="#badges">Badges</Button>
          <Button variant="ghost" href="#typography">Typography</Button>
          <Button variant="ghost" href="#forms">Forms</Button>
          <Button variant="ghost" href="#layout">Layout</Button>
          <Button variant="ghost" href="#combined">Combined</Button>
        </div>
        <div class="mt-8">
          <Button variant="primary" href="/">Back to Home</Button>
        </div>
      </div>
    </Container>
  </Section>
</BaseLayout>
